{
  "name": "flamov-portfolio",
  "version": "3.0.0",
  "description": "Flamov portfolio website",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server",
    "watch": "npm run server:watch & npm run assets:watch",
    "server:watch": "nodemon server.js --inspect",
    "assets:build": "parcel build src/assets/js/*.js src/assets/sass/*.scss src/assets/img/**/* -d src/public --detailed-report",
    "assets:watch": "parcel watch src/assets/js/*.js src/assets/sass/*.scss src/assets/img/**/* -d src/public",
    "linting:eslint": "eslint '**/*.js' --ignore-pattern public/",
    "linting:stylelint": "stylelint 'src/assets/**/*.scss'",
    "test": "export NODE_ENV=test && mocha ./tests/**/*.spec.js --exit",
    "test:report": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=reports/mocha/results.xml",
    "test:coverage": "nyc --reporter=lcov npm run test:report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://Flamov@github.com/Flamov/flamov-portfolio.git"
  },
  "keywords": [
    "flamov",
    "portfolio",
    "website"
  ],
  "author": "Samuel Kindler",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Flamov/flamov-portfolio/issues"
  },
  "homepage": "https://github.com/Flamov/flamov-portfolio#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "config": "^3.1.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-minify-html": "^0.12.0",
    "mongo-sanitize": "^1.0.1",
    "mongoose": "^5.5.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.11",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.22.0",
    "mongodb-memory-server": "^5.0.4",
    "nyc": "^14.0.0",
    "parcel-bundler": "^1.12.3",
    "sass": "^1.19.0",
    "stylelint": "^10.0.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.6.0",
    "supertest": "^4.0.2",
    "vanilla-lazyload": "^12.0.0-beta.0"
  },
  "nodemonConfig": {
    "ignore": [
      "src/assets",
      "src/public"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": 0,
      "object-curly-newline": [
        "error",
        {
          "ObjectPattern": {
            "minProperties": 6
          }
        }
      ]
    },
    "env": {
      "node": true,
      "mocha": true,
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-airbnb"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
