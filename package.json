{
  "private": true,
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server",
    "watch": "npm run server:watch & npm run assets:watch",
    "server:watch": "nodemon server.js --inspect",
    "assets:build": "parcel build src/assets/scripts/*.js src/assets/styles/*.scss -d src/public --public-url ./ --detailed-report",
    "assets:watch": "parcel watch src/assets/scripts/*.js src/assets/styles/*.scss -d src/public --public-url ./",
    "eslint": "eslint '**/*.js' --ignore-pattern public/",
    "eslint:report": "npm run eslint -- -f json -o reports/eslint.xml",
    "stylelint": "stylelint 'src/assets/**/*.scss'",
    "test": "jest .*.spec.js --verbose",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-minify-html": "^0.12.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "helmet": "^4.4.1",
    "highlight.js": "^10.7.2",
    "marked": "^2.0.3",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.6",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.32.10",
    "stylelint": "^13.12.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "supertest": "^6.1.3",
    "vanilla-lazyload": "^17.3.1"
  },
  "nodemonConfig": {
    "ignore": [
      "src/assets/*",
      "src/public/*",
      "tests/*"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-airbnb",
    "rules": {
      "rule-empty-line-before": null
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
