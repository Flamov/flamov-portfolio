{
  "name": "flamov-portfolio",
  "version": "3.1.0",
  "description": "Flamov portfolio website",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server",
    "watch": "npm run server:watch & npm run assets:watch",
    "server:watch": "nodemon server.js --inspect",
    "assets:build": "parcel build src/assets/js/*.js src/assets/styles/*.scss -d src/public --public-url ./ --detailed-report",
    "assets:watch": "parcel watch src/assets/js/*.js src/assets/styles/*.scss -d src/public --public-url ./",
    "eslint": "eslint '**/*.js' --ignore-pattern public/",
    "eslint:report": "npm run eslint -- -f junit -o reports/eslint/results.xml",
    "stylelint": "stylelint 'src/assets/**/*.scss'",
    "test": "export NODE_ENV=test && jest .*.spec.js --verbose",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://Flamov@github.com/Flamov/flamov-portfolio.git"
  },
  "keywords": [
    "flamov",
    "portfolio",
    "website"
  ],
  "author": "Samuel Kindler",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Flamov/flamov-portfolio/issues"
  },
  "homepage": "https://github.com/Flamov/flamov-portfolio#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-minify-html": "^0.12.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "helmet": "^3.23.3",
    "highlight.js": "^10.1.2",
    "marked": "^1.1.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "pug": "^3.0.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "nyc": "^15.1.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "supertest": "^4.0.2"
  },
  "nodemonConfig": {
    "ignore": [
      "src/assets/*",
      "src/public/*",
      "tests/*"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-airbnb",
    "rules": {
      "rule-empty-line-before": null
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
