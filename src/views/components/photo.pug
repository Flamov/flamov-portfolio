mixin photo({ title, alt, location, album, date, src })
  figure(data-album=album).photo.js-photo
    .container
      picture
        if src.webp
          source(type="image/webp" data-srcset=src.webp)
        img(data-src=src.jpg alt=alt).js-lazy
    figcaption
      div.info
        p.title=title
        p.location=location
      p.date=date
