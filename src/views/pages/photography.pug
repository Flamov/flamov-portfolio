extends ../layout.pug

block variables
  - const PAGE_SECTION = 'photography';

block styles
  link(rel='stylesheet' href='/public/styles/photography.css')

block main
  section.photography
    .photos-controls
      a(href="#").active All
      a(href="#") 🇰🇪 Kenya
      a(href="#") 🇭🇰 Hong Kong
      a(href="#") 🏴󠁧󠁢󠁷󠁬󠁳󠁿 Wales
      a(href="#") 🇬🇧 UK
      a(href="#") 🇨🇳 China
    .photos-wrapper
      each photo in photos
        figure
          img(src=photo.src alt=photo.alt)
          figcaption
            span.description= photo.description
            span.date= photo.date
